<h1>Carrito #{{cart.id}}</h1>

{{#if cart.products.length}}
  <table border="1" cellpadding="8">
    <thead>
      <tr>
        <th>Producto</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart.products}}
        <tr>
          <td>{{this.nombre}}</td>
          <td>${{this.precio}}</td>
          <td>{{this.quantity}}</td>
          <td>${{this.subtotal}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <h3>Total: ${{total}}</h3>
{{else}}
  <p>El carrito está vacío.</p>
{{/if}}