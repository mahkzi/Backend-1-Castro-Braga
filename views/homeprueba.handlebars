<h1>Lista de Productos desde MongoDB</h1>

{{#if products.length}}
  <ul>
    {{#each products}}
      <li>
        <strong>{{nombre}}</strong> - ${{precio}} - Stock: {{stock}} <br>
        <em>{{detalle}}</em>
        <br>
        <button class="add-to-cart" data-id="{{id}}" data-nombre="{{nombre}}" data-precio="{{precio}}">
           Agregar al carrito
        </button>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>Ocurri√≥ un error inesperado</p>
{{/if}}

